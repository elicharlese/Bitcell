# Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Solana Configuration
NEXT_PUBLIC_SOLANA_NETWORK=devnet
NEXT_PUBLIC_SOLANA_RPC_URL=https://api.devnet.solana.com
SOLANA_RPC_URL=https://api.devnet.solana.com
NEXT_PUBLIC_BITCELL_PROGRAM_ID=BitC1177777777777777777777777777777777777777
SOLANA_PROGRAM_ID=BitC1177777777777777777777777777777777777777

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Development Configuration
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Security (generate random strings for production)
NEXTAUTH_SECRET=your_nextauth_secret_here
NEXTAUTH_URL=http://localhost:3000

# Production Configuration (for Vercel)
# VERCEL_URL will be automatically set by Vercel
# NODE_ENV=production

# Optional: Analytics and Monitoring
# VERCEL_ANALYTICS_ID=your_vercel_analytics_id
# SENTRY_DSN=your_sentry_dsn

# Optional: External APIs for market data
# COINGECKO_API_KEY=your_coingecko_api_key
